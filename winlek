    <script>
        function handleEnter(event) {
            if (event.key === "Enter") {
                generateWinNumbers();
            }
        }

        function generateWinNumbers() {
            const input = document.getElementById("numberInput").value;
            const noDouble = document.getElementById("noDouble").checked;
            const digits = [...new Set(input.split('').sort())];
            let results = "";

            if (digits.length < 2) {
                showToast("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢ 2 ‡∏ï‡∏±‡∏ß");
                return;
            }

            if (noDouble) {
                const threeDigit = getCombinations(digits, 3);
                const twoDigit = getCombinations(digits, 2);
                
                if (threeDigit.length > 0) {
                    results += createResultBox("‡πÄ‡∏•‡∏Ç 3 ‡∏ï‡∏±‡∏ß ‡πÑ‡∏°‡πà‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(threeDigit, 15), "red-text");
                }
                results += createResultBox("‡πÄ‡∏•‡∏Ç 2 ‡∏ï‡∏±‡∏ß ‡πÑ‡∏°‡πà‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(twoDigit, 15), "blue-text");
            } else {
                const threeDigit = getCombinations(digits, 3);
                const threeDigitWithDouble = getCombinationsWithReplacement(digits, 3);
                const twoDigit = getCombinations(digits, 2);
                const twoDigitWithDouble = getCombinationsWithReplacement(digits, 2);

                if (threeDigit.length > 0) {
                    results += createResultBox("‡πÄ‡∏•‡∏Ç 3 ‡∏ï‡∏±‡∏ß ‡πÑ‡∏°‡πà‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(threeDigit, 15), "red-text");
                }
                results += createResultBox("‡πÄ‡∏•‡∏Ç 2 ‡∏ï‡∏±‡∏ß ‡πÑ‡∏°‡πà‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(twoDigit, 15), "blue-text");
                results += createResultBox("‡πÄ‡∏•‡∏Ç 3 ‡∏ï‡∏±‡∏ß ‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(threeDigitWithDouble, 15), "red-text");
                results += createResultBox("‡πÄ‡∏•‡∏Ç 2 ‡∏ï‡∏±‡∏ß ‡∏£‡∏ß‡∏°‡πÄ‡∏ö‡∏¥‡πâ‡∏•", splitResultIntoLines(twoDigitWithDouble, 15), "blue-text");
            }

            document.getElementById("results").innerHTML = results;
        }

        function splitResultIntoLines(result, limit) {
            const lines = [];
            for (let i = 0; i < result.length; i += limit) {
                lines.push(result.slice(i, i + limit).join('-'));
            }
            return lines;
        }

        function createResultBox(title, numbers, colorClass) {
            const textToCopy = numbers.join('-').replace(/<br>/g, '-');
            return `<div class="result-box">
                        <div class="title"><strong>${title}</strong></div>
                        <p class="${colorClass}">${numbers.join('<br>')}</p>
                        <button class="copy-btn" onclick="copyToClipboard(\`${textToCopy}\`)">‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å</button>
                    </div>`;
        }

        function getCombinations(array, size) {
            if (size === 1) return array.map(v => v);
            if (array.length < size) return [];
            let result = [];
            array.forEach((item, index) => {
                const smallerCombinations = getCombinations(array.slice(index + 1), size - 1);
                smallerCombinations.forEach(combo => {
                    result.push(item + combo);
                });
            });
            return result;
        }

        function getCombinationsWithReplacement(array, size) {
            if (size === 1) return array.map(v => v);
            let result = [];
            array.forEach((item, index) => {
                const smallerCombinations = getCombinationsWithReplacement(array.slice(index), size - 1);
                smallerCombinations.forEach(combo => {
                    result.push(item + combo);
                });
            });
            return result;
        }

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                showToast("‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!");
            }).catch(() => {
                showToast("‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡πÑ‡∏î‡πâ");
            });
        }

        function resetPage() {
            document.getElementById("numberInput").value = "";
            document.getElementById("results").innerHTML = "";
            document.getElementById("noDouble").checked = false;
        }

        function showToast(message) {
            let toast = document.getElementById("toast");
            toast.innerText = message;
            toast.classList.add("show");
            setTimeout(() => {
                toast.classList.remove("show");
            }, 3000);
        }

        function changeBackground(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.body.style.background = `url(${e.target.result}) no-repeat center center fixed`;
                    document.body.style.backgroundSize = 'cover';
                };
                reader.readAsDataURL(file);
            }
        }

        function filterInput() {
            const inputField = document.getElementById("numberInput");
            const original = inputField.value;
            const cleaned = original.replace(/[^0-9]/g, '');
            if (original !== cleaned) {
                inputField.value = cleaned;
                showToast("‡∏Å‡∏£‡∏≠‡∏Å‡πÑ‡∏î‡πâ‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô");
            }
        }
    </script>

